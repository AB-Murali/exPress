<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="index.scss">
    <title>BLOG SITE</title>
</head>
<body class="bg-dark">
    <div class="container">
        <figure class="text-center">
            <blockquote class="blockquote">
              <h1 class="mb-4 text-light mt-6">exPRESS</h1>
            </blockquote>
            <figcaption class="blockquote-footer text-danger">
              Blog Site
            </figcaption>
        </figure>

        <a href="/articles/new" class="btn btn-success">New Article</a>

        <% articles.forEach(article => { %>
            <div class="card mt-3 mb-2 text-bg-secondary">
                <div class="card-body">
                    <div class="card-header mb-2">
                        <h4 class="card-title text-light"><%= article.title %></h4>
                    </div>
                    <div class="card-subtitle text-muted mb-2 text-dark"> <%= article.createdAt.toLocaleDateString() %> </div>
                    <div class="card-text mb-2"><%= article.description %></div>

                    <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                    <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
                    <form action="/articles/<%= article.id %>?_method=DELETE" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">DELETE</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>